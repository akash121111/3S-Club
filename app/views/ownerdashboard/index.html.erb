

  
  <body style="background: #e8e9eb">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2 col-xs-2">
          <div class="sidenav sidenav-collapse"  data-toggle="" id="demo">
    <div class="side-header">
      <%= image_tag("user.png", size:"100x100")%>
      <h5>Owner's Name</h5>
    </div>
    <hr>
    <div class="nav-item">
    <a href="#about" class="active">Upcoming Bookings</a>
    <a href="#services">Spaces Details</a>
    <a href="#clients">Booking Record</a>
    <a href="#contact">Profile</a>
    <a href="#contact">Log Out</a>
    </div>
    </div>
    </div>
        <div class="col-sm-10 col-xs-10">
          <div class="main">
           <div class="container-fluid">
              <button class="hidden visible-xs" style="float: right" data-toggle="collapse" data-target="#demo"  aria-expanded="false" aria-controls="demo">collapse</button>
              <h3>Upcoming Bookings...</h3>
              <div class="row text-center">
                  <div class="col-sm-3">
                  <form action="/show" methos="get">
                    <div class="card">
                      <%= image_tag("space.jpg",:class =>"card-img-top")%>
                      <div class="card-block">
                         <div class="card-title"><h5><%= @space.space_address%></h5></div>
                         <div class="card-text" >
                           <p style="display: inline;float: left">MON-SAT</p>
                           <p style="display: inline;float: right;"><%= @time.start_time.strftime("%H:%M")%>-<%= @time.end_time.strftime("%H:%M")%></p>
                         </div>
                      </div>
                     
                     <button type="submit"><div class="card-footer">View Details</div></button>
                    
                    </div>
                  </div>
                  </form>
              </div>
              <div class="row">
                <div class="col-sm-6">
                  <h3>Booked spaces</h3>
                  <ul class="list-group">
                  <li class="list-group-item ">
                    <div class="media">
                      <div class="media-left">
                      <%= image_tag("space.jpg", :class =>"media-object")%>
                       </div>
                      <div class="media-body text-right">
                        <h3 class="media-heading">Address</h3>
                        <p>Monday-Saturday</p>
                        <p>8:00 AM - 12:30 PM</p>
                        <h4>Booked</h4>
                         <button class="btn btn-primary">Details</button>
                      </div>
                    </div>
                  </li>              
              </ul>
                </div>
                <div class="col-sm-6">
                  <h3>Released spaces</h3>               
                  <ul class="list-group">
                  <li class="list-group-item ">
                    <div class="media">
                      <div class="media-left">
                      <%= image_tag("space.jpg", :class =>"media-object")%>
                       </div>
                      <div class="media-body text-right">
                        <h3 class="media-heading">Address</h3>
                        <p>Monday-Saturday</p>
                        <p>8:00 AM - 12:30 PM</p>
                        <h4>Checkout</h4>
                         <button class="btn btn-primary">Details</button>
                      </div>
                    </div>
                  </li>    
              </ul>
                </div>
              </div>
           </div>
          </div>
        </div>
      </div>
    </div>
  </body>