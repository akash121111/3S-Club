<html>
    <head>
    


    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 ">
                    <%= render "layouts/sidebar" %>
                </div>
                <div class="col-md-10 mt-5">
                    <center><h1>OWNER DETAILS</h1></center>
                    <br><br><br>

                    <div class='container-fluid'>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="container-fluid">
                                    <h2>Account Details</h2><br>
                                
                                    <%= form_for (@user) do |f| %>
                                        <div class="form-group">
                                            <%= f.label :email, 'Email' %>
                                            <%= f.email_field :email, class: 'form-control'%>
                                        </div>
                                        <div class="form-group"> 
                                            <%= f.label :password, 'Old Password' %><p style="color:red">Verify your old password!!!</p>
                                            <%= f.password_field :password, class: 'form-control', placeholder:'************',id:'user_old_password'%>
                                        </div>
                                        <div class="form-group"> 
                                            <%= f.label :password, 'New Password' %>
                                            <%= f.password_field :password, class: 'form-control'%>
                                        </div>
                                        <div class="form-group"> 
                                            <%= f.label :password_confirmation, 'Confirm Password' %>
                                            <%= f.password_field :password_confirmation, class: 'form-control'%>
                                        </div>
                                        <% provide :head_tags do %>
                                            <script>
                    
                                                document.addEventListener("DOMContentLoaded", function(){
                                                    $('#user_old_password').focusout(function(){
                                                        $.ajax({
                                                                type : "get",
                                                                data : { data_value: $('#user_old_password').val() }
                                                        });
                                                        <% if (@user.authenticate(params[:data_value])) %>
                                                            
                                                           
                                                                document.getElementById('user_password').readOnly=false;
                                                                document.getElementById('user_password_confirmation').readOnly=false;
                                                                
                                                            
                                                            
                                                        <% end %>
                                                    });
                                                });
                                            </script>
                                        <% end %>
                                    
                                        
                                        <div>
                                            <%= submit_tag 'Save Changes', class: "btn btn-primary" %>
                                        </div>


                                    <% end %>     
                                </div>
                            </div>

                            <div class="col-md-6">
                                    <div class="container-fluid">
                                        <h2>Personal Details</h2><br>
                                        <%@user_detail=@user.user_detail%>
                                        <%=form_for (@user.user_detail)  do |f| %>
                                            
                                            <div class="form-group">   
                                                <%= f.label :first_name, 'First Name' %>
                                                <%= f.text_field :first_name, class: 'form-control'%>                        
                                            </div>
                                            <div class="form-group">                               
                                                <%= f.label :last_name, 'Last Name' %>
                                                <%= f.text_field :last_name, class: 'form-control'%>                         
                                            </div>
                                            <div class="form-group">                               
                                                <%= f.label :about_owner, 'About Owner' %>
                                                <%= f.text_field :about_user, class: 'form-control'%>                         
                                            </div>
                                            <div class="form-group">                               
                                                <%= f.label :phone_number, 'Phone Number' %>
                                                <%= f.number_field :phone_number, class: 'form-control'%>                         
                                            </div>
                                            <div class="form-group">                               
                                                <%= f.label :mobile_number, 'Mobile Number' %>
                                                <%= f.number_field :mobile_number, class: 'form-control'%>                         
                                            </div>
                                            <div>
                                                <%= submit_tag 'Save Changes', class: "btn btn-primary" %>
                                            </div>


                                        <% end %>
                                    </div>
                            </div>
                        </div>
                    
                    </div>
                    <br><br>
                    
                    <br>
                    <div class='container-fluid'>
                        <div class="row">
                            <%@user_addresses.each do |user_address| %>
                                
                                <div class="col-md-6 col-sm-6">
                                 <h2><%=UserAddressType.find(user_address.user_address_type.id).address_type%></h2>
                                    <br>
                                    <%=form_for user_address do |f| %>
                                        <div class="container-fluid">
                                            
                                                <div class="form-group">
                                                    <%= f.label :address_line_1, 'Address Line 1' %>
                                                    <%= f.text_field :address_line_1, class: 'form-control'%>
                                                </div>
                                            
                                           
                                                <div class="form-group"> 
                                                    <%= f.label :address_line_2, 'Address Line 2' %>
                                                    <%= f.text_field :address_line_2, class: 'form-control'%>
                                                </div>
                                            
                                                <div class="form-group"> 
                                                    <%= f.label :city, 'City' %>
                                                    <%= f.text_field :city, class: 'form-control'%>
                                                </div>
                                            
                                           
                                                <div class="form-group"> 
                                                    <%= f.label :pincode, 'Pincode' %>
                                                    <%= f.number_field :pincode, class: 'form-control'%>
                                                </div>
                                         
                                            
                                                <div class="form-group"> 
                                                    <%= f.label :state, 'State' %>
                                                    <%= f.text_field :state, class: 'form-control'%>
                                                </div>
                                          
                                            
                                                <div class="form-group"> 
                                                    <%= f.label :country, 'Country' %>
                                                    <%= f.text_field :country, class: 'form-control'%>
                                                </div>
                                         
                                        
                                            <div>
                                                <%= submit_tag 'Save Changes', class: "btn btn-primary" %>
                                            </div>
                                            <br>
                                        
                                        </div>
                                    <%end%>
                                </div>
                            <% end %> 
                                    
                            
                            

                            
                        </div>
                    
                    </div>

                </div>

        </div>

    </body>
         

</html>