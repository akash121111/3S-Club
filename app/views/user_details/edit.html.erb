<html>
    <head>
    


    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 ">
                    <div class="sidenav ">
                        <div class="side-header">
                            <%= image_tag("user.png", size:"100x100", :class=>"rounded-circle")%>
                            <h5>Owner's Name</h5>
                        </div>
                        <hr>
                        <div class="nav-item">
                            <a href="/owner_dashboard" class="active">Upcoming Bookings</a>
                            <%= link_to 'Spaces Details', spaces_path %>
                            <a href="#clients">Booking Record</a>
                            <%= link_to 'Profile', edit_user_detail_path(@user_detail) %>
                            <a href="#contact">Log Out</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-10 mt-5">
                    <center><h1>OWNER DETAILS</h1></center>
                    <br><br><br>

                    <div class='container-fluid'>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="container-fluid">
                                    <h2>Account Details</h2><br>
                                
                                    <%= form_for (@user) do |f| %>
                                        <div class="form-group">
                                            <%= f.label :email, 'Email' %>
                                            <%= f.text_field :email, class: 'form-control'%>
                                        </div>
                                        <div class="form-group"> 
                                            <%= f.label :password_digest, 'Password' %>
                                            <%= f.password_field :password_digest, class: 'form-control', placeholder:'*****'%>
                                        </div>
                                        <div class="form-group"> 
                                            <%= f.label :password_confirmation, 'Confirm Password' %>
                                            <%= f.password_field :password_confirmation, class: 'form-control'%>
                                        </div>
                                    
                                        
                                        <div>
                                            <%= submit_tag 'Save Changes', class: "btn btn-primary" %>
                                        </div>


                                    <% end %>     
                                </div>
                            </div>

                            <div class="col-md-6">
                                    <div class="container-fluid">
                                        <h2>Personal Details</h2><br>
                                        <%@user_detail=@user.user_detail%>
                                        <%=form_for (@user.user_detail)  do |f| %>
                                            
                                            <div class="form-group">   
                                                <%= f.label :first_name, 'First Name' %>
                                                <%= f.text_field :first_name, class: 'form-control'%>                        
                                            </div>
                                            <div class="form-group">                               
                                                <%= f.label :last_name, 'Last Name' %>
                                                <%= f.text_field :last_name, class: 'form-control'%>                         
                                            </div>
                                            <div class="form-group">                               
                                                <%= f.label :about_owner, 'About Owner' %>
                                                <%= f.text_field :about_user, class: 'form-control'%>                         
                                            </div>
                                            <div class="form-group">                               
                                                <%= f.label :phone_number, 'Phone Number' %>
                                                <%= f.text_field :phone_number, class: 'form-control'%>                         
                                            </div>
                                            <div class="form-group">                               
                                                <%= f.label :mobile_number, 'Mobile Number' %>
                                                <%= f.text_field :mobile_number, class: 'form-control'%>                         
                                            </div>
                                            <div>
                                                <%= submit_tag 'Save Changes', class: "btn btn-primary" %>
                                            </div>


                                        <% end %>
                                    </div>
                            </div>
                        </div>
                    
                    </div>
                    <br><br>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6"><h2>Permanent Address</h2></div>
                            <div class="col-md-6"><h2>Correspondence Address</h2></div>
                        </div>
                    </div>
                    <br>
                    <div class='container-fluid'>
                        <div class="row">
                            <%@user_addresses.each do |user_address| %>
                         
                                <div class="col-md-6">
                                    <%=form_for user_address do |f| %>
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="form-group">
                                                    <%= f.label :address_line_1, 'Address Line 1' %>
                                                    <%= f.text_field :address_line_1, class: 'form-control address-fields'%>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group"> 
                                                    <%= f.label :address_line_2, 'Address Line 2' %>
                                                    <%= f.text_field :address_line_2, class: 'form-control address-fields'%>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group"> 
                                                    <%= f.label :city, 'City' %>
                                                    <%= f.text_field :city, class: 'form-control address-fields'%>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group"> 
                                                    <%= f.label :pincode, 'Pincode' %>
                                                    <%= f.text_field :pincode, class: 'form-control address-fields'%>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group"> 
                                                    <%= f.label :state, 'State' %>
                                                    <%= f.text_field :state, class: 'form-control address-fields'%>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group"> 
                                                    <%= f.label :country, 'Country' %>
                                                    <%= f.text_field :country, class: 'form-control address-fields'%>
                                                </div>
                                            </div>
                                        
                                            <div class="row">
                                                <%= submit_tag 'Save Changes', class: "btn btn-primary" %>
                                            
                                            </div>
                                        
                                        </div>
                                    <%end%>
                                </div>
                            <% end %> 
                                    
                            
                            

                            
                        </div>
                    
                    </div>

                </div>

        </div>

    </body>
         

</html>