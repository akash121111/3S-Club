


   
<body>

<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3>Log In</h3>
        <!--<div class="d-flex justify-content-end social_icon">
          <span><i class="fab fa-facebook-square"></i></span>
          <span><i class="fab fa-google-plus-square"></i></span>
          <span><i class="fab fa-twitter-square"></i></span>
        </div>-->
      </div>
      <div class="card-body">
        <%=form_for(:session, :html => {class: "form-horizontal", role: "form"},url: login_confirm_path ,:method=>"post") do |f| %>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input type="text" name="email" class="form-control" placeholder="username">
            
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input type="password" name="password_digest" class="form-control" placeholder="password">
          </div>
          <div class="row align-items-center remember">
            <input type="checkbox">Remember Me
          </div>
          <div class="form-group">
            <input type="submit" value="Login" class="btn float-right login_btn">
          </div>
        <% end %> 
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          Don't have an account?<%= link_to "SIGN UP", sign_up_user_path %>
        </div>
        <div class="d-flex justify-content-center">
          <%= link_to "Forgot your password?", new_password_reset_path %>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>

   