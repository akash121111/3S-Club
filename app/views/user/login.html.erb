<h2 class="center">log-in<h2>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"},url: login_confirm_path ) do |f| %>
    <div class="form-group">
       <div class="control-label col-sm-2">
       <%= f.label :email %>
       </div>
       <div class="col-sm-8">
         <%= f.email_field :email , class: "form-control", placeholder: "Enter Email" %>
       </div>
   </div>

   <div class="form-group">
       <div class="control-label col-sm-2">
       <%= f.label :password %>
       </div>
       <div class="col-sm-8">
         <%= f.password_field :password_digest, class: "form-control" %>
       </div>
   </div>

   <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
       <%= f.submit 'Login', class:'btn btn-primary btn-lg'  %>
       
     </div>
      <div style="font-size: 20px; margin-left: 17%;">
        <%= link_to "forgotten password?", new_password_reset_path %>
        <a href="user#index">Create account</a>
     </div>
   </div>
<% end %> 