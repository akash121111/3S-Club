<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

 <%= render "layouts/member_sidebar" %>
 </div>
       <div class="col-sm-10">
        <div class="row">
          <div class="col-sm-9">
            <h1>ACCOUNT DETAILS</h1>
               <div class="form-row">
                 <div class="form-group col-md-6">
                   <label for="Email">Email</label>
                   <input type="email" class="form-control" id="Email" disabled value=" <%= @member.email%>">
                 </div>
            
                 <div class="form-group col-md-6">
                  <label for="Password">Password</label>
                  <input type="password" class="form-control" id="Password" value=" <%= @member.password%>">
                 </div>
               </div>
             
                <h2>PERSONAL DETAILS</h2> 
                 <%= form_for(:session, :html => {class: "form-horizontal", role: "form"},url:  profile_path,:method=>"post") do |f| %>
                   <div class="form-row">
                     <div class="form-group col-md-6">
                       <label for="firstname">FirstName</label>
                       <input type="text" name="first_name" class="form-control" id="firstname" value=" <%=@membr.first_name%>">
                     </div>
                     <div class="form-group col-md-6">
                       <label for="lastname">LastName</label>
                       <input type="text" name="last_name" class="form-control" id="lastname" value=" <%=@membr.last_name%>">
                     </div>
                   </div>

                  <div class="form-group">
                   <label for="educationdetails">Educationdetails</label>
                   <input type="text" name="education_details" class="form-control" id="educationdetails" value=" <%=@membr.education_details%>">
                  </div>

                 <div class="form-group">
                   <label for="aboutuser">AboutUser</label>
                   <input type="text" name="about_user" class="form-control" id="aboutuser" value=" <%=@membr.about_user%>">
                 </div>

                 <div class="form-group">
                  <label for="city">City</label>
                  <input type="text" name="city" class="form-control" id="city" value=" <%=@membr.city%>">
                 </div>
                   <div class="form-row">
                    <div class="form-group col-md-4">
                      <label for="college">college</label>
                      <input type="text" name="college" class="form-control" id="college" value=" <%=@membr.college%>">
                    </div>
                    <div class="form-group col-md-4">
                       <label for="phno">phonenumber</label>
                       <input type="text" name="phone_number" class="form-control" id="phno" value=" <%=@membr.phone_number%>">
                    </div>
                  <div class="form-group col-md-4">
                    <label for="mobno">mobilenumber</label>
                    <input type="text" name="mobile_number" class="form-control" id="mobno" value=" <%=@membr.mobile_number%>">
                  </div>
                </div>
  
               <input type="submit" class="btn btn-primary" value="Update Changes">

              <% end %>
            </div>
          </div>
      
        <div class='container-fluid'>
                        <div class="row">
                            <%@user_addresses.each do |user_address| %>
                                
                                <div class="col-md-6 col-sm-6">
                                <%@user_address_type=UserAddressType.find(user_address.user_address_type.id)%>
                                 <h2>&nbsp;<%=@user_address_type.address_type%></h2>
                                    <br>
                                    <%=form_for user_address do |f| %>
                                    
                                        <div class="container-fluid">
                                            
                                                <div class="form-group">
                                                    <%= f.label :address_line_1, 'Address Line 1' %>
                                                    <%= f.text_field :address_line_1, class: 'form-control address-line-1'%>
                                                    <span id="span_address_line_1_error_<%=@user_address_type.id%>" class="error-text"></span>
                                                </div>
                                            
                                           
                                                <div class="form-group"> 
                                                    <%= f.label :address_line_2, 'Address Line 2' %>
                                                    <%= f.text_field :address_line_2, class: 'form-control address-line-2'%>
                                                    <span id="span_address_line_2_error_<%=@user_address_type.id%>" class="error-text"></span>
                                                </div>
                                            
                                                <div class="form-group"> 
                                                    <%= f.label :city, 'City' %>
                                                    <%= f.text_field :city, class: 'form-control city'%>
                                                    <span id="span_city_error_<%=@user_address_type.id%>" class="error-text"></span>
                                                </div>
                                            
                                           
                                                <div class="form-group"> 
                                                    <%= f.label :pincode, 'Pincode' %>
                                                    <%= f.number_field :pincode, class: 'form-control pincode'%>
                                                    <span id="span_pincode_error_<%=@user_address_type.id%>" class="error-text"></span>
                                                </div>
                                         
                                            
                                                <div class="form-group"> 
                                                    <%= f.label :state, 'State' %>
                                                    <%= f.text_field :state, class: 'form-control state'%>
                                                    <span id="span_state_error_<%=@user_address_type.id%>" class="error-text"></span>
                                                </div>
                                          
                                            
                                                <div class="form-group"> 
                                                    <%= f.label :country, 'Country' %>
                                                    <%= f.text_field :country, class: 'form-control country'%>
                                                    <span id="span_country_error_<%=@user_address_type.id%>" class="error-text"></span>
                                                </div>
                                         
                                        
                                            <div>
                                                <%= submit_tag 'Save Changes', class: "btn btn-primary" %>
                                            </div>
                                            <br>
                                        
                                        </div>
                                    <%end%>
                                </div>
                            <% end %> 
                                    
                            
                            

                            
                        </div>
                    
                    </div>
  </div>
    </div>
  </div>
</body>
