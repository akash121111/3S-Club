 <%=form_for(:session, :html => {class: "form-horizontal", role: "form"},url: payment_confirm_path ,:method=>"post") do |f| %>
    <span class="payment-errors"></span>
    <form action="/charge" method="post" id="payment-form">
    <div class="form-row">
      <label>
        <span>Card Number</span>
        <input type="text" size="20" data-stripe="number"/>
      </label>
    </div>
  
    <div class="form-row">
      <label>
        <span>CVC</span>
        <input type="text" size="4" data-stripe="cvc"/>
      </label>
    </div>
  
    <div class="form-row">
      <label>
        <span>Expiration (MM/YYYY)</span>
        <input type="text" size="2" data-stripe="exp-month"/>
      </label>
      <span> / </span>
      <input type="text" size="4" data-stripe="exp-year"/>
    </div>
    <input type="hidden" name="order[stripe_token]" id="stripe_token" />
    <button type="submit" id="payment">Submit Payment</button>
    </form>
  <% end %>