<h1>Search</h1>
<%= form_tag(searching_path, {:method => 'get'}) do %>
<div class="input-group active-pink-3 active-pink-4 mb-4 col-sm-3">
 <div class="input-group-prepend">
    <span class="input-group-text" id="addon-wrapping"><%= image_tag("baseline_search_black_18dp.png", :alt => "rss feed") %></span>
  </div>
  <%= text_field_tag(:search, params[:search], placeholder: "Enter a City name") %>
  <%= date_field_tag(:date, params[:date], placeholder: "Enter a date") %>
  
</div>
<div class="active-pink-3 active-pink-4 mb-4 col-sm-3"><input type="date" id="datepicker" width="276" /></div>

  <%= text_field_tag(:date, params[:date], placeholder: "Enter a date") %>
  
</div>
<div class="active-pink-3 active-pink-4 mb-4 col-sm-3"><input  id="datepicker" width="276" /></div>
<script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
    </script>
    


    <%= submit_tag('Search', :name => nil) %>
<% end %>

<h1>Routers</h1>

<table>
  <thead>
    <tr>
      <th>city</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  @aftersearchbydayandaddress.each do |s| %>
      <tr>
        <td><%= s.city %></td>
        <td><%= s.latitude %></td>
        <td><%= s.longitude %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style='width: 800px;'>  
  <div id="map" style='width: 800px; height: 400px;'></div>  
</div>  

<script type="text/javascript">  
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>


